@model BookStore.ViewModels.AuthBookViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data"> 
            @if(ViewBag.Message != null)
            {
                <div class="alert alert-danger"> @ViewBag.Message</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               @*<label asp-for="Id" class="control-label"></label>*@
                <input asp-for="Id" class="form-control"  type="hidden"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishDay" class="control-label"></label>
                <input asp-for="PublishDay" class="form-control" />
                <span asp-validation-for="PublishDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" name="File" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId"  class="form-control"  asp-items="@(new SelectList(Model.Authors,  "Id", "Name"))" >
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div> 

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

