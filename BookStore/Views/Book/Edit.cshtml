@model BookStore.ViewModels.AuthBookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" onsubmit="return AjaxSubmitForm(this);" autocomplete="off">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger"> @ViewBag.Message</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishDay" class="control-label"></label>
                <input asp-for="PublishDay" class="form-control" />
                <span asp-validation-for="PublishDay" class="text-danger"></span>
            </div>
            <div>
                @*   <label asp-for="ImageUrl" class="control-label"></label>*@
                <img class="img-thumbnail" style="width:100px;" src="@Model.ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ImageUrl" class="form-control" />
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(Model.Authors, "Id", "Name"))"> </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button onclick="ClosePopUp()" class="btn btn-primary">Back to List</button>
</div>

